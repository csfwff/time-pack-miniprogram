<!--pages/write/write.wxml-->
<view class="write-container">
  <view class="top-container">
    <navigation-bar title="时间胶囊" back="{{true}}" showLogo="{{false}}" homeButton="{{true}}" color="white" background="#2487FF"></navigation-bar>
    <view class="title-container">
      <view class="title-box">
        <input class="title-input" placeholder="标题"> </input>
      </view>
    </view>
  </view>

  <view class="write-box">
    <textarea class="write-area" style="min-height: {{minWriteHeight}}px;">
      </textarea>
  </view>
  <view class="bottom-area">
    <view class="open-time">
      <image src="../../assets/img/clock-blue.png" class="time-icon"></image>
      <text class="open-time-text">开启之时</text>
      <picker mode="date">
        <view class="picker">
        </view>
      </picker>
    </view>
    <view class="submit-btns">
      <button form-type="gift" class="sendBtn">
        <view class="btn-box">
          <image src="../../assets/img/gift.png" class="time-icon btn-icon"></image>
          赠送好友
        </view>

      </button>
      <button form-type="submit" class="packBtn">
        <view class="btn-box">
          <image src="../../assets/img/pack.png" class="time-icon btn-icon"></image>
          封装胶囊
        </view>

      </button>
    </view>
  </view>
</view>